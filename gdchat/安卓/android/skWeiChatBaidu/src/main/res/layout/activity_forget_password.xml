<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/a_view_actionbar"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/ic_login_back">

        <com.sk.weichat.view.SkinImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:padding="15dp"
            android:src="@mipmap/return_icon"
            android:tint="@color/black" />

        <TextView
            android:id="@+id/tv_psw_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="100dp"
            android:text="忘记密码"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#060a14"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_prefix"
                    android:layout_width="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@mipmap/popup_arrow_down_green"
                    android:gravity="center_vertical"
                    android:text="+86"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16_text_size"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/phone_numer_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />


            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="图形码"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16_text_size"
                    android:textColor="@color/black"/>

                <com.sk.weichat.view.ClearEditText
                    android:id="@+id/image_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="图形码"
                    android:inputType="phone"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="13.0dip"
                    android:layout_marginBottom="13.0dip"
                    android:background="@color/Grey_300" />

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="13.0dip"
                    android:layout_marginBottom="13.0dip"
                    android:background="@color/Grey_300" />

                <ImageView
                    android:id="@+id/image_iv_refresh"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_refre_msg_code" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20dp"
                    android:background="@color/light_gray_7"
                    android:visibility="gone"/>/>


            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16_text_size"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/auth_code_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/digits_number"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />

                <Button
                    android:id="@+id/send_again_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#4072e3" />

            </LinearLayout>


            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="新密码"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16_text_size"
                    android:textColor="@color/black"/>

                <com.sk.weichat.view.ClearEditText
                    android:id="@+id/password_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:inputType="phone"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />

                <ToggleButton
                    android:id="@+id/tbEye"
                    style="@style/PasswordEye" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20dp"
                    android:background="@color/light_gray_7"
                    android:visibility="gone"/>


            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="新密码"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16_text_size"
                    android:textColor="@color/black"/>

                <com.sk.weichat.view.ClearEditText
                    android:id="@+id/confirm_password_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:inputType="phone"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />

                <ToggleButton
                    android:id="@+id/tbEyeConfirm"
                    style="@style/PasswordEye" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20dp"
                    android:background="@color/light_gray_7"
                    android:visibility="gone"/>/>


            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>



        <Button
            android:id="@+id/login_btn"
            style="@style/BossGreenBtn"
            android:layout_width="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_height="50dp"
            android:background="@drawable/ql_l_g_bg_ripple"
            android:layout_below="@+id/rel_yiyou"
            android:layout_marginTop="56dp"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>